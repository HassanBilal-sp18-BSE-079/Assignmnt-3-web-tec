extends ../layout


block content
    .row
        .col-md-6
            h1 Property List
        .col-md-6
            a(href="/products/add" class="btn btn-primary") Add Item
        table.table
            thead
                tr
                    th Property Name
                    th Property Price
                    th City
                    th Location
                    th More Details
            tbody
                each product in products
                    tr 
                        td=product.name
                        td=product.price
                        td=product.city
                        td=product.location
                        td=product.detail
                        td  
                            a(href="/products/delete/"+product._id    class="btn btn-danger") Delete
                            a(href="/products/edit/"+product._id    class="btn btn-info") Edit
                            a(href="/products/cart/"+product._id    class="btn btn-info ml-3") Add To Cart